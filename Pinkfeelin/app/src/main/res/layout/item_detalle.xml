<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/idBuyTv" />

    <TextView
        android:text="TextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/idBuyTv"
        android:layout_toEndOf="@+id/idBuyTv"
        android:id="@+id/idItemTv" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_toStartOf="@+id/qtyTv"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/idItemTv"
        android:layout_toEndOf="@+id/idItemTv"
        android:id="@+id/NameTv" />

    <TextView
        android:text="987778"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NameTv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/qtyTv" />
</RelativeLayout>